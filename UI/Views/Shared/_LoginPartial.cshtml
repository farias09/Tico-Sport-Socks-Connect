@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

<ul class="navbar-nav navbar-right">
    <li>
        @Html.ActionLink("Hola " + User.Identity.GetUserName() + "!", "Index", "Manage",
            routeValues: null,
            htmlAttributes: new { title = "Manage", @class = "nav-link", style = "white-space: nowrap;" })
    </li>
    <li>
        <a class="nav-link" href="javascript:document.getElementById('logoutForm').submit()" style="white-space: nowrap;">Cerrar sesión</a>
    </li>

</ul>
    }
}
else
{
    <ul class="navbar-nav navbar-right">
        <li>@Html.ActionLink("Registrarse", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink", @class = "nav-link" })</li>
        <li>
            @Html.ActionLink("Iniciar sesión", "Login", "Account",
                routeValues: null,
                htmlAttributes: new { id = "loginLink", @class = "nav-link", style = "white-space: nowrap;" })
        </li>    </ul>
}
