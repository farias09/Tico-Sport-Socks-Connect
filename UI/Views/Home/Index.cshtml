                                }
                            </td>

                            <td>@orden.FechaOrden.ToString("dd/MM/yyyy")</td>
                            <td class="text-center">
                                <a href="@Url.Action("Confirmacion", "Ordenes", new { id = orden.Orden_ID })" class="btn btn-outline-info btn-sm shadow-sm">
                                    <i class="bi bi-eye"></i> Ver
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>
        </div>
    }
    else
    {
