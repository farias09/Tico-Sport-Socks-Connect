@model List<TicoSportSocksConnect.UI.Models.ApplicationUser>

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Inicio</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />

    <!-- Favicon -->
    <link rel="shortcut icon" href="~/Content/images/favicon.ico">

    <!-- dark layout js -->
    <script src="~/Scripts/js/pages/layout.js"></script>

    <!-- Bootstrap and app CSS -->
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/app.css" />
    <link rel="stylesheet" href="~/Content/css/icons.css" />
</head>

<body>
    <section class="container my-5">
        <h2 class="mt-4 mb-4">Administradores del Sistema</h2>

        @using (Html.BeginForm("ListaAspNetUsers", "Usuarios", FormMethod.Get))
        {
            <div class="input-group mb-4 w-50">
                @Html.TextBox("busqueda", ViewBag.Busqueda as string, new { @class = "form-control", placeholder = "Buscar por nombre..." })
                <button type="submit" class="btn btn-outline-primary">Buscar</button>
            </div>
        }

        <table class="table table-hover table-bordered shadow-sm">
            <thead class="table-light">
                <tr>
                    <th>Nombre</th>
                    <th>Apellido</th>
                    <th>Email</th>
                    <th>Teléfono</th>
                    <th>Identificación</th>
                    <th>Nombre de Usuario</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                    <tr>
                        <td>@user.Nombre</td>
                        <td>@user.Apellido</td>
                        <td>@user.Email</td>
                        <td>@user.PhoneNumber</td>
                        <td>@user.Identificacion</td>
                        <td>@user.NombreDeUsuario</td>
                    </tr>
                }
            </tbody>
        </table>
    </section>
</body>
</html>

