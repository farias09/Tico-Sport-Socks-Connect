@model List<Abstracciones.Modelos.Ordenes.OrdenesDto>
@{
    ViewBag.Title = "Órdenes Pendientes";
    Layout = "~/Views/Shared/_Layout.cshtml";
    var usuarios = ViewBag.Usuarios as Dictionary<int, string>;
}

<!doctype html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <title>Gestión de Órdenes | Tico Sport Socks</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Gestión de órdenes de Tico Sport Socks" name="description" />
    <meta content="Tico Sport Socks" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">
    <!-- dark layout js -->
    <script src="~/Scripts/js/pages/layout.js"></script>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/app.css" />
    <link rel="stylesheet" href="~/Content/css/icons.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/remixicon/fonts/remixicon.css">
</head>

<style>
    body {
        background-color: #f9f9f9;
    }

    .card-header {
        border-bottom: 2px solid #ddd;
    }

    .card {
        margin-bottom: 20px;
        border-radius: 8px;
        overflow: hidden;
    }

    .badge-pendiente {
        background-color: #ffc107;
        color: black;
    }

    .badge-en-proceso {
        background-color: #007bff;
        color: white;
    }

    .badge-enviado {
        background-color: #28a745;
        color: white;
    }

    .modal-header {
        border-bottom: 2px solid #ddd;
    }

    .btn-outline-primary {
        transition: all 0.3s ease;
    }

        .btn-outline-primary:hover {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
</style>

<body>
    <div class="main-content">
        <div class="page-content">
            <div id="layout-wrapper">
                <div class="container mt-4">
                    <div class="container-fluid">
                        <!-- start page title -->
                        <div class="row">
                            <div class="col-12">
                                <div class="page-title-box d-sm-flex align-items-center justify-content-between">

                                    <div class="text-end mb-3">
                                        <button class="btn btn-outline-secondary" onclick="history.back()">
                                            <i class="ri-arrow-left-line align-middle me-1"></i> Volver
                                        </button>
                                    </div>

                                    <h4 class="mb-sm-0">Órdenes Pendientes</h4>
                                    <div class="page-title-right">
                                        <ol class="breadcrumb m-0">
                                            <li class="breadcrumb-item"><a href="javascript: void(0);">Órdenes</a></li>
                                        </ol>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <!-- end page title -->

                        <div class="row">
                            <div class="col-12">
                                <div class="card">
                                    <div class="card-body">
                                        <div class="row mb-3">
                                            <div class="col-md-6">
                                                <h4 class="card-title">Gestiona y actualiza los pedidos realizados por los clientes</h4>
                                            </div>
                                            <div class="col-md-6 text-end">
                                                <button class="btn btn-primary" onclick="location.href='@Url.Action("Create", "Ordenes")'">
                                                    <i class="ri-add-line align-middle me-1"></i> Crear Nueva Orden
                                                </button>
                                            </div>
                                        </div>

                                        <!-- Filtros -->
                                        <div class="row mb-3">
                                            <div class="col-md-4">
                                                <div class="input-group">
                                                    <input type="text" id="searchInput" class="form-control" placeholder="Buscar por ID o cliente...">
                                                    <button class="btn btn-outline-secondary" type="button" id="searchButton">
                                                        <i class="ri-search-line"></i>
                                                    </button>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <select class="form-select" id="statusFilter">
                                                    <option value="">Todos los estados</option>
                                                    <option value="Pendiente">Pendiente</option>
                                                    <option value="En proceso">En proceso</option>
                                                    <option value="Completada">Completada</option>
                                                    <option value="Cancelada">Cancelada</option>
                                                </select>
                                            </div>
                                            <div class="col-md-4">
                                                <input type="date" class="form-control" id="dateFilter">
                                            </div>
                                        </div>

                                        <!-- Lista de órdenes -->
                                        <div class="table-responsive">
                                            @if (Model != null && Model.Any())
                                            {
                                                foreach (var orden in Model)
                                                {
                                                    <div class="card mb-3 border order-card" data-id="@orden.Orden_ID" data-status="@orden.Estado" data-date="@orden.FechaOrden.ToString("yyyy-MM-dd")">
                                                        <div class="card-header bg-light">
                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    <h5 class="mb-0">Pedido #ORD@(orden.Orden_ID.ToString("D4"))</h5>
                                                                    <p class="mb-0 text-muted">Cliente: <strong>@usuarios[orden.Usuario_ID]</strong></p>
                                                                </div>
                                                                <span class="badge bg-@(orden.Estado == "Pendiente" ? "warning" : orden.Estado == "Completada" ? "success" : "primary")">
                                                                    @orden.Estado
                                                                </span>
                                                            </div>
                                                            <p class="mb-0 text-muted">Fecha de pedido: @orden.FechaOrden.ToString("dd/MM/yyyy")</p>
                                                        </div>
                                                        <div class="card-body">
                                                            @{
                                                                var detalles = ViewBag.Detalles as List<Abstracciones.Modelos.Ordenes.DetalleOrdenesDto>;
                                                                var detallesOrden = detalles?.Where(d => d.Orden_ID == orden.Orden_ID).ToList();
                                                            }

                                                            @if (detallesOrden != null && detallesOrden.Any())
                                                            {
                                                                <div class="table-responsive">
                                                                    <table class="table table-bordered mb-4">
                                                                        <thead class="table-light">
                                                                            <tr>
                                                                                <th>Producto</th>
                                                                                <th>Cantidad</th>
                                                                                <th>Precio Unitario</th>
                                                                                <th>Subtotal</th>
                                                                            </tr>
                                                                        </thead>
                                                                        <tbody>
                                                                            @foreach (var detalle in detallesOrden)
                                                                            {
                                                                                <tr>
                                                                                    <td>@detalle.NombreProducto</td>
                                                                                    <td>@detalle.Cantidad</td>
                                                                                    <td>₡@detalle.PrecioUnitario.ToString("N2")</td>
                                                                                    <td>₡@detalle.Subtotal.ToString("N2")</td>
                                                                                </tr>
                                                                            }
                                                                        </tbody>
                                                                        <tfoot>
                                                                            <tr>
                                                                                <td colspan="3" class="text-end"><strong>Total:</strong></td>
                                                                                <td><strong>₡@orden.Total.ToString("N2")</strong></td>
                                                                            </tr>
                                                                        </tfoot>
                                                                    </table>
                                                                </div>
                                                            }

                                                            <div class="d-flex justify-content-between align-items-center">
                                                                <div>
                                                                    @if (orden.Estado == "Pendiente")
                                                                    {
                                                                        <span class="text-muted"><i class="ri-time-line align-middle me-1"></i> Fecha de envío no establecida</span>
                                                                    }
                                                                    else if (orden.Estado == "En proceso")
                                                                    {
                                                                        <div class="d-flex align-items-center">
                                                                            <span class="text-muted me-2"><i class="ri-truck-line align-middle me-1"></i> Fecha estimada de envío:</span>
                                                                            <input type="date" class="form-control form-control-sm" style="width: auto; display: inline-block;" value="@DateTime.Now.AddDays(3).ToString("yyyy-MM-dd")">
                                                                            <button class="btn btn-sm btn-outline-primary ms-2">Modificar</button>
                                                                        </div>
                                                                    }
                                                                </div>
                                                                <div>
                                                                    @if (orden.Estado == "Pendiente")
                                                                    {
                                                                        <button class="btn btn-sm btn-primary me-2" onclick="cambiarEstado(@orden.Orden_ID, 'En proceso')">
                                                                            <i class="ri-play-circle-line align-middle me-1"></i> Iniciar Proceso
                                                                        </button>
                                                                        <button class="btn btn-sm btn-danger me-2" onclick="mostrarModalCancelar(@orden.Orden_ID)">
                                                                            <i class="ri-close-circle-line align-middle me-1"></i> Cancelar Orden
                                                                        </button>
                                                                    }
                                                                    else if (orden.Estado == "En proceso")
                                                                    {
                                                                        <button class="btn btn-sm btn-success me-2" onclick="cambiarEstado(@orden.Orden_ID, 'Completada')">
                                                                            <i class="ri-check-line align-middle me-1"></i> Marcar como Completada
                                                                        </button>
                                                                    }
                                                                    <button class="btn btn-sm btn-outline-secondary" onclick="verDetalles(@orden.Orden_ID)">
                                                                        <i class="ri-eye-line align-middle me-1"></i> Ver Detalles
                                                                    </button>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                }
                                            }
                                            else
                                            {
                                                <div class="alert alert-info">
                                                    No hay órdenes pendientes en este momento.
                                                </div>
                                            }
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de confirmación de cancelación -->
    <div class="modal fade" id="modalCancelarOrden" tabindex="-1" aria-labelledby="modalCancelarOrdenLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="modalCancelarOrdenLabel">Confirmar Cancelación</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    ¿Estás seguro de que deseas cancelar esta orden?
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                    <button type="button" class="btn btn-danger" id="confirmarCancelarOrden">Cancelar Orden</button>
                </div>
            </div>
        </div>
    </div>

    @section Scripts {
        <script>
        function cambiarEstado(ordenId, nuevoEstado) {
            if (confirm(`¿Estás seguro de cambiar el estado de la orden a "${nuevoEstado}"?`)) {
                $.ajax({
                    url: '@Url.Action("CambiarEstadoOrden", "Ordenes")',
                    type: 'POST',
                    data: { id: ordenId, estado: nuevoEstado },
                    success: function (response) {
                        if (response.success) {
                            location.reload();
                        } else {
                            alert('Error al actualizar el estado: ' + response.message);
                        }
                    },
                    error: function () {
                        alert('Error al comunicarse con el servidor');
                    }
                });
            }
        }

        function verDetalles(ordenId) {
            window.location.href = '@Url.Action("Confirmacion", "Ordenes")' + '?id=' + ordenId;
        }

        function mostrarModalCancelar(ordenId) {
            $('#modalCancelarOrden').modal('show');
            $('#confirmarCancelarOrden').off('click').on('click', function () {
                cambiarEstado(ordenId, 'Cancelada');
                $('#modalCancelarOrden').modal('hide');
            });
        }

        // Filtros
        $(document).ready(function () {
            $('#searchButton').click(function () {
                aplicarFiltros();
            });

            $('#statusFilter, #dateFilter').change(function () {
                aplicarFiltros();
            });

            function aplicarFiltros() {
                const searchText = $('#searchInput').val().toLowerCase();
                const statusFilter = $('#statusFilter').val();
                const dateFilter = $('#dateFilter').val();

                $('.order-card').each(function () {
                    const orderId = $(this).data('id').toString().toLowerCase();
                    const orderStatus = $(this).data('status');
                    const orderDate = $(this).data('date');

                    let matchesSearch = orderId.includes(searchText) || orderId.includes('ord' + searchText);
                    let matchesStatus = statusFilter === '' || orderStatus === statusFilter;
                    let matchesDate = dateFilter === '' || orderDate === dateFilter;

                    if (matchesSearch && matchesStatus && matchesDate) {
                        $(this).show();
                    } else {
                        $(this).hide();
                    }
                });
            }
        });
        </script>
    }

    <!-- JAVASCRIPT -->
    <script src="~/Scripts/libs/jquery/jquery.min.js"></script>
    <script src="~/Scripts/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
    <script src="~/Scripts/libs/metismenu/metisMenu.min.js"></script>
    <script src="~/Scripts/libs/simplebar/simplebar.min.js"></script>
    <script src="~/Scripts/libs/node-waves/waves.min.js"></script>

    <script src="~/Scripts/js/app.js"></script>

    <!-- apexcharts -->
    <script src="~/Scripts/libs/apexcharts/apexcharts.min.js"></script>

    <script src="~/Scripts/js/pages/dashboard.init.js"></script>
</body>
</html>
