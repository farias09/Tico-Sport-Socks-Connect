@model IEnumerable<Abstracciones.Modelos.Carrito.CarritoDto>

@{
    ViewBag.Title = "Carrito de Compras";
}

<h2>Carrito de Compras</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Producto</th>
            <th>Cantidad</th>
            <th>Precio Unitario</th>
            <th>Subtotal</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Producto_ID</td>
                <td>@item.cantidad</td>
                <td>@item.precio_unitario.ToString("C")</td>
                <td>@item.subtotal.ToString("C")</td>
                <td>
                    @Html.ActionLink("Eliminar", "EliminarProducto", new { carritoId = item.Carrito_ID }, new { @class = "btn btn-danger btn-sm" })
                </td>
            </tr>
        }
    </tbody>
</table>

<div>
    <strong>Total: </strong>
    <span id="total-display">$@ViewBag.Total</span>
</div>

@* Botón para finalizar la compra *@
<div class="mt-3">
    @Html.ActionLink("Finalizar Compra", "FinalizarCompra", new { ventaId = ViewBag.VentaId }, new { @class = "btn btn-primary" })
</div>
