@model TicoSportSocksConnect.UI.Models.UserInfoViewModel
@{
    ViewBag.Title = "Información del Usuario";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<head>

    <meta charset="utf-8" />
    <title>Control de Cajas | Clivax - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- dark layout js -->
    <script src="~/Scripts/js/pages/layout.js"></script>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/app.css" />
    <link rel="stylesheet" href="~/Content/css/icons.css" />

</head>

<body>
    <div class="main-content">
        <div class="page-content">
            <div id="layout-wrapper">
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 col-xl-9">
                            <div class="card shadow-lg rounded-4">
                                <div class="card-header bg-primary text-white py-4">
                                    <h2 class="mb-0 fs-3">Información Personal</h2>
                                </div>
                                <div class="card-body p-5">
                                    <div class="mb-4">
                                        <label class="form-label fs-5">Nombre</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.Nombre" readonly />
                                    </div>
                                    <div class="mb-4">
                                        <label class="form-label fs-5">Apelliod</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.Apellido" readonly />
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fs-5">Nombre de Usuario</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.NombreDeUsuario" readonly />
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fs-5">Correo Electrónico</label>
                                        <input type="email" class="form-control form-control-lg" value="@Model.Email" readonly />
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fs-5">Número de Teléfono</label>
                                        <input type="text" class="form-control form-control-lg" value="@Model.PhoneNumber" readonly />
                                    </div>

                                    <div class="mb-4">
                                        <label class="form-label fs-5">Número de Cédula</label>
                                        <input type="email" class="form-control form-control-lg" value="@Model.Identificacion" readonly />
                                    </div>

                                    <div class="d-flex justify-content-between mt-4">
                                        <a href="@Url.Action("Index", "Home")" class="btn btn-lg btn-secondary">
                                            <i class="bi bi-house-door-fill me-2"></i>Volver al Inicio
                                        </a>
                                        <div>
                                            @Html.ActionLink("Editar", "EditProfile", null, new { @class = "btn btn-lg btn-outline-primary" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
