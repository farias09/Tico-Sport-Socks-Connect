@model TicoSportSocksConnect.UI.Models.EditProfileViewModel

@{
    ViewBag.Title = "Editar Perfil";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>

    <meta charset="utf-8" />
    <title>Control de Cajas | Clivax - Admin & Dashboard Template</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta content="Premium Multipurpose Admin & Dashboard Template" name="description" />
    <meta content="Codebucks" name="author" />
    <!-- App favicon -->
    <link rel="shortcut icon" href="~/images/favicon.ico">

    <!-- dark layout js -->
    <script src="~/Scripts/js/pages/layout.js"></script>
    <link rel="stylesheet" href="~/Content/css/bootstrap.css" />
    <link rel="stylesheet" href="~/Content/css/app.css" />
    <link rel="stylesheet" href="~/Content/css/icons.css" />

</head>
<body>
    <div class="main-content">
        <div class="page-content">
            <div id="layout-wrapper">
                <div class="container mt-5">
                    <div class="row justify-content-center">
                        <div class="col-lg-10 col-xl-9">
                            <div class="card shadow-lg rounded-4">
                                <div class="card-header bg-primary text-white py-4">
                                    <h2 class="mb-0 fs-3">Editar Perfil</h2>
                                </div>
                                <div class="card-body p-5">
                                    @using (Html.BeginForm("EditProfile", "Account", FormMethod.Post, new { @class = "needs-validation", role = "form", novalidate = "novalidate" }))
                                    {
                                        @Html.AntiForgeryToken()
                                        @Html.ValidationSummary("", new { @class = "text-danger mb-4" })

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.Nombre, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.Nombre, new { @class = "form-control form-control-lg", placeholder = "Nombre" })
                                            @Html.ValidationMessageFor(m => m.Nombre, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.Apellido, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.Apellido, new { @class = "form-control form-control-lg", placeholder = "Apellido" })
                                            @Html.ValidationMessageFor(m => m.Apellido, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.Identificacion, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.Identificacion, new { @class = "form-control form-control-lg", placeholder = "Número de cédula", @readonly = "readonly" })
                                            @Html.ValidationMessageFor(m => m.Identificacion, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.NombreDeUsuario, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.NombreDeUsuario, new { @class = "form-control form-control-lg", placeholder = "Nombre de usuario" })
                                            @Html.ValidationMessageFor(m => m.NombreDeUsuario, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.Email, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control form-control-lg", placeholder = "Correo electrónico" })
                                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.PhoneNumber, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.TextBoxFor(m => m.PhoneNumber, new { @class = "form-control form-control-lg", placeholder = "Número de Teléfono" })
                                            @Html.ValidationMessageFor(m => m.PhoneNumber, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.OldPassword, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.PasswordFor(m => m.OldPassword, new { @class = "form-control form-control-lg", placeholder = "Contraseña actual" })
                                            @Html.ValidationMessageFor(m => m.OldPassword, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.NewPassword, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.PasswordFor(m => m.NewPassword, new { @class = "form-control form-control-lg", placeholder = "Nueva contraseña" })
                                            @Html.ValidationMessageFor(m => m.NewPassword, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="mb-4">
                                            @Html.LabelFor(m => m.ConfirmPassword, htmlAttributes: new { @class = "form-label fs-5" })
                                            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control form-control-lg", placeholder = "Confirmar nueva contraseña" })
                                            @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger" })
                                        </div>

                                        <div class="d-flex justify-content-between mt-4">
                                            <a href="@Url.Action("Perfil", "Account")" class="btn btn-lg btn-secondary">
                                                Cancelar
                                            </a>
                                            <button type="submit" class="btn btn-lg btn-outline-primary">
                                                Guardar cambios
                                            </button>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
